%li.lead_scoring_rule{"data-index" => index}
  = link_to image_tag('delete.png', :size => '16x16', :alt => 'Remove Rule'), nil, :class => "remove_lead_scoring_rule"

  = r.hidden_field(:id) unless r.object.new_record?

  If event:
  = r.text_field(:event, :style => "width: 150px;")
  matches:
  = r.text_field(:match, :style => "width: 150px;")
  , change score by
  = r.text_field(:points, :style => "width: 35px;")
  points.
  (Only once:
  = r.check_box(:once, :style => "vertical-align: bottom;")
  )
